
mixin crearProyecto(proyecto = {})
    .jumbotron.jumbotron-fluid
        form.form-inline(action=`/nuevo-proyecto/${proyecto.id || ''}` method="POST")
            .form-group.mx-sm-3.mb-2
            .container
                
                label(for="nombre")
                    input.form-control.form-control-lg(value=proyecto.nombre type="text" id='nombre' name="nombre"
                    placeholder="Nombre Proyecto")
                
                label
                   input.btn.btn-primary.btn-lg.btn-block.m-5(type="submit", value=`${proyecto.nombre ? 'Guardar' : 'Agregar'}` class="boton")

                